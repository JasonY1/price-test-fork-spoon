<div id="myCarousel" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <div class= "carousel-inner">
    <div class="item active">
      <%= image_tag 'http://placehold.it/1024x700' %>
    </div>
    <div class="item">
      <%= image_tag 'http://placehold.it/1024x701' %>
    </div>
    <div class="item">
      <%= image_tag 'http://placehold.it/1024x702' %>
    </div>

  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev" role= "button">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next" role="button">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
<script type="text/javascript">
  $(document).ready(function () {
    $('.carousel').carousel({
      interval: 2000
    });
  $('.carousel').carousel('cycle');
});
</script>
